<!DOCTYPE html>
<html lang="en">
<style type="text/css">
    .navbar {
        background-color: #333 !important;
        /*        border-bottom: 1px solid #ddac0f;*/
        box-shadow: 0 0 10px rgba(0,0,0,.9);
    }

    .textbox {
        border-radius: 10px;
        padding: 10px;
        border: 1px solid #ddac0f;
        width: 250px;
        height: 30px;
        font-size: 16px;
        width: 90%;
        background-color: #333;
    }

        .textbox::placeholder {
            color: #ddac0f;
            background-color: #333;
        }

        .textbox:focus {
            border: 1px solid #ddac0f;
            outline-color: #ddac0f;
            border-color: #ddac0f;
        }

    .widget-content button {
        color: #ddac0f;
    }

    .fa-search {
        color: #ddac0f;
    }

    .fa-comment-dots {
        color: #ddac0f;
    }

    .fa-bell {
        color: #ddac0f;
    }

    .fa-user {
        color: #ddac0f;
    }

    .dropdown-content {
        display: none;
    }

    .page-content {
        min-height: calc(100% - 100px); /* 50px Footer yüksekliği */
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 100px;
    }

    .footer-border {
        border-top: 1px solid #ddac0f;
    }

    a {
        color: #ddac0f !important;
    }

    

</style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mootable</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/mootable.Web.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
    @await Html.PartialAsync("_LayoutCssPartial")
    @await RenderSectionAsync("Styles",false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  box-shadow mb-3" style="box-shadow:0 0 10px rgba(0,0,0,.8)">
            <div class="container-fluid text-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="img/mootable_logo_1.png" alt="" class="mootable-image" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-flex justify-content-end">
                    <ul class="navbar-nav mx-auto">
                        @*<li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        <li class="nav-item">
                            <i class="fas fa-search"></i>
                            <input type="text" class="textbox" placeholder="mootable'da Ara">
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="fas fa-comment-dots"></i>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="fas fa-bell"></i>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @await Component.InvokeAsync("UserMenu")
                            @*<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">
                            <i class="fas fa-user"></i>
                            </a>*@
                            @* <div class="dropdown-content">
                            <a href="#">Link 1</a>
                            <a href="#">Link 2</a>
                            <a href="#">Link 3</a>
                            </div>*@
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container page-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-border text-muted">
        <div class="container">
            &copy; 2023 - mootable - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_LayoutJsPartial")
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>

