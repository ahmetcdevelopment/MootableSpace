@model mootableProject.Shared.Entities.Dtos.UserPasswordChangeDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Şifre Değiştir";
}
<style>
    h4 {
        color: #ddac0f !important;
    }

    label {
        color: #ddac0f !important;
    }

    input {
        background-color: #333 !important;
        color: #fff !important;
    }
</style>
<head>
    <link rel="stylesheet" href="~/Content/css/card.css" />
</head>
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span> Şifre Değiştir</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" asp-action="PasswordChange" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input tyoe="password" class="form-control" asp-for="CurrentPassword" placeholder="Lütfen, şuanki şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input tyoe="password" class="form-control" asp-for="NewPassword" placeholder="Lütfen, yeni şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input tyoe="password" class="form-control" asp-for="RepeatPassword" placeholder="Lütfen, tekrar yeni şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning btn-block"><span class="fas fa-save"></span> Kaydet</button>
                        <a class="btn btn-secondary btn-block" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
